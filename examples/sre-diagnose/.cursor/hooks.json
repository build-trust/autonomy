{
  "version": 1,
  "hooks": {
    "session-start": [
      {
        "command": ".cursor/hooks/session-init.sh"
      }
    ],
    "pre-tool-call": [
      {
        "command": ".cursor/hooks/sre-diagnose.sh",
        "matcher": "run_terminal_cmd"
      }
    ],
    "post-tool-call": [
      {
        "command": ".cursor/hooks/audit.sh"
      }
    ]
  }
}
